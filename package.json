{
  "name": "nuxt-app",
  "type": "module",
  "private": true,
  "scripts": {
    "build": "nuxt build",
    "dev": "nuxt dev",
    "generate": "nuxt generate",
    "preview": "nuxt preview",
    "postinstall": "nuxt prepare",
    "serve": "node .output/server/index.mjs",
    "lint": "eslint .",
    "lint:fix": "eslint --fix .",
    "db:generateAuth": "npx @better-auth/cli generate --config server/utils/auth.ts --output server/database/schema/auth.ts -y",
    "db:generate": "drizzle-kit generate --config ./server/database/drizzle.config.ts",
    "db:migrate": "drizzle-kit migrate --config ./server/database/drizzle.config.ts"
  },
  "dependencies": {
    "@nuxt/ui": "^3.0.0",
    "better-auth": "^1.2.4",
    "dotenv": "^16.4.7",
    "drizzle-orm": "^0.40.0",
    "ioredis": "^5.6.0",
    "nuxt": "3.16.0",
    "pg": "^8.14.0",
    "vue": "^3.5.13",
    "zod": "^3.24.2"
  },
  "devDependencies": {
    "@antfu/eslint-config": "^4.10.1",
    "@better-auth/cli": "^1.2.4",
    "@iconify-json/lucide": "^1.2.30",
    "@iconify-json/simple-icons": "^1.2.28",
    "@nuxt/eslint": "^1.2.0",
    "@types/pg": "^8.11.11",
    "drizzle-kit": "^0.30.5",
    "eslint": "^9.22.0",
    "typescript": "^5.8.2"
  }
}
